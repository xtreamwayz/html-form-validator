{
    "name": "xtreamwayz/html-form-validator",
    "description": "A library validating and filtering submitted data by reusing html form attributes",
    "type": "project",
    "homepage": "https://github.com/xtreamwayz/html-form-validator",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/xtreamwayz/html-form-validator/issues",
        "wiki": "https://github.com/xtreamwayz/html-form-validator/wiki"
    },
    "authors": [
        {
            "name": "Geert Eltink",
            "homepage": "https://xtreamwayz.com/"
        }
    ],
    "require": {
        "php": "^5.6|^7.0",
        "zendframework/zend-inputfilter": "^2.7",
        "zendframework/zend-validator": "^2.8",
        "zendframework/zend-filter": "^2.7",
        "zendframework/zend-i18n": "^2.7",
        "zendframework/zend-uri": "^2.5",
        "zendframework/zend-stdlib": "^2.7|^3.0",
        "zendframework/zend-servicemanager": "^2.7|^3.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0",
        "squizlabs/php_codesniffer": "^2.3",
        "malukenho/docheader": "^0.1.0"
    },
    "suggest": {
        "zendframework/zend-servicemanager": "To support third-party validators and filters"
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "php vendor/squizlabs/php_codesniffer/scripts/phpcs",
        "test": "php vendor/phpunit/phpunit/phpunit --report-useless-tests",
        "license-check": [
            "php vendor/malukenho/docheader/bin/docheader check src/",
            "php vendor/malukenho/docheader/bin/docheader check test/"
        ]
    },
    "autoload": {
        "psr-4": {
            "Xtreamwayz\\HTMLFormValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XtreamwayzTest\\HTMLFormValidator\\": "test/"
        }
    },
    "extra" : {
        "branch-alias" : {
            "dev-master" : "1.0.x-dev"
        }
    }
}
